@namespace WiredBrainCoffee.UI.Components
@using WiredBrainCoffee.Models

<div class="simple-form extras">
    <EditForm Model="Extras">
        <div class="mb-3">
            <label class="form-label" for="milk">Add Milk</label>
            <InputSelect class="form-control" @bind-Value="Extras.Milk">
                <option selected value="None">None</option>
                <option value="Low Fat">Low Fat</option>
                <option value="2%">2%</option>
                <option value="Whole">Whole Milk</option>
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label" for="creamer">Add Creamer</label>
            <InputSelect class="form-control" @bind-Value="Extras.Creamer">
                <option selected value="None">None</option>
                <option value="Light">Light</option>
                <option value="Regular">Regular</option>
                <option value="Heavy">Heavy</option>
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label" for="flavor">Add Flavor</label>
            <InputSelect class="form-control" @bind-Value="Extras.Flavor">
                <option selected value="None">None</option>
                <option value="Mocha">Mocha</option>
                <option value="Vanilla">Vanilla</option>
                <option value="Caramel">Caramel</option>
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label" for="toppings">Add Toppings</label>
            <InputSelect class="form-control" @bind-Value="Extras.Topping">
                <option selected value="None">None</option>
                <option value="Whipped Cream">Whipped Cream</option>
                <option value="Chocolate Shavings">Chocolate Shavings</option>
                <option value="Peppermint Flakes">Peppermint Flakes</option>
            </InputSelect>
        </div>
        <div class="mb-3">
            <label class="form-label" for="first-name">Notes</label>
            <InputTextArea @bind-Value="Extras.Notes" class="form-control" Placeholder="Enter notes for your barista here." />
        </div>
    </EditForm>
    <button @onclick="Cancel" class="btn btn-secondary">Cancel</button>
    <button @onclick="SubmitForm" class="btn btn-success float-end">Okay</button>
</div>

@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    public CoffeeExtras Extras = new CoffeeExtras()
    {
        Milk = "None",
        Flavor = "None",
        Notes = "",
        Topping = "None",
        Creamer = "None"
    };

    void SubmitForm()
    {
        BlazoredModal.CloseAsync(ModalResult.Ok(Extras));
    }

    void Cancel()
    {
        BlazoredModal.CancelAsync();
    }
}